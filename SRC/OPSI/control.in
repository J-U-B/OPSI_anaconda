[Package]
version: {{O_PKG_VER}}
depends: 
incremental: False

[Product]
type: localboot
id: {{TESTPREFIX}}{{ORGPREFIX}}anaconda{{PY_VER}}
name: Anaconda{{PY_VER}}
description: The Most Popular Python Data Science Platform
 ___
 Homepage: https://www.anaconda.com
 Changelog: https://www.anaconda.com/blog/company-blog/
advice: Maintainer: {{O_MAINTAINER}}
 Organization: {{ORGNAME}}
 Release date: {{O_RELEASE_DATE}}
version: {{O_SOFTWARE_VER}}
priority: 0
licenseRequired: False
productClasses: programming
setupScript: setup.opsiscript
uninstallScript: uninstall.opsiscript
updateScript: update.opsiscript
alwaysScript: 
onceScript: 
customScript: 
userLoginScript: 

[ProductProperty]
type: bool
name: kill_running
description: kill running instance (for software on_demand)
default: False

{{^ifdef_64bit_only}}
[ProductProperty]
type: unicode
name: install_architecture
multivalue: False
editable: False
description: which architecture (32/64 bit) should be installed (64 bit currently experimental)
values: ["32 bit", "64 bit", "sysnative"]
default: ["sysnative"]
{{/ifdef_64bit_only}}

[ProductProperty]
type: bool
name: link_desktop_Anaconda_Navigator
description: Generate or delete Desktop link for Anaconda Navigator
default: False

[ProductProperty]
type: bool
name: link_desktop_Spyder
description: Generate or delete Desktop link for Spyder
default: False

[ProductProperty]
type: bool
name: link_desktop_Jupyter_Notebook
description: Generate or delete Desktop link for Jupyter Notebook
default: False

[ProductProperty]
type: bool
name: link_desktop_Anaconda_Prompt
description: Generate or delete Desktop link for Anaconda Prompt
default: False

[ProductProperty]
type: unicode
name: additional_packages
multivalue: True
editable: True
description: Define liste of packages (separated by spaces) to install
values: ["", "tensorflow", "django"]
default: [""] 

[ProductProperty]
type: unicode
name: additional_packages_install_mode
description: When should the additional packages be installed?
multivalue: False
editable: False
values: ["setup", "update", "none"]
default: ["setup"]

[ProductProperty]
type: bool
name: update_dry_run
description: Just pretend to updating anaconda and install additional packages.
default: False

[ProductProperty]
type: bool
name: update_verbose
description: Be more verbose on update
default: False

[ProductProperty]
type: bool
name: update_skip
description: Skip update on installation
default: False

[ProductProperty]
type: bool
name: update_rights_skip
description: Skip repair of access rights during update to save time. (Not reccommended.)
default: False

[ProductProperty]
type: unicode
name: custom_post_install
multivalue: False
editable: True
description: Define filename for include script in custom directory after installation
values: ["custom_test.opsiinc", "none", "post-install.opsiinc"]
default: ["none"]

[ProductProperty]
type: unicode
name: custom_post_uninstall
multivalue: False
editable: True
description: Define filename for include script in custom directory after deinstallation
values: ["custom_test.opsiinc", "none", "post-uninstall.opsiinc"]
default: ["none"]

[ProductProperty]
type: unicode
name: log_level
multivalue: False
editable: False
{{#ifdef_testing}}
description: Loglevel for this package ({{DEFAULT_TESTING_LOGLEVEL}})
{{/ifdef_testing}}
{{^ifdef_testing}}
description: Loglevel for this package ({{DEFAULT_RELEASE_LOGLEVEL}})
{{/ifdef_testing}}
values: ["default", "1", "2", "3", "4", "5", "6", "7", "8", "9"]
default: ["default"]

[ProductProperty]
type: unicode
name: required_mimimum_space
multivalue: False
editable: True
description: Expert setting(!): Minimum space required for installation in megabytes. At least 9000 MB are needed. Increase this value for additional packages. You may decrease it only, if this package was installed previously. Use +/- prefix to add to / subtract from default value.
values: ["default", "9000"]
default: ["default"]


[Changelog]
{{! The changelog is outsourced  to a separate file in the root of this project. }}
{{! It will be included on building the OPSI package. }}
